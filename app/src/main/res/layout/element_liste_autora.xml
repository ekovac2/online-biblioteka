<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="72dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/elementListe"
            android:layout_width="346dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="elementListe"
            android:textSize="25dp"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="41dp" />

        <TextView
            android:id="@+id/brojKnjiga"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_below="@+id/elementListe"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:text="broj knjiga"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/brojKnjiga"
            android:layout_alignBottom="@+id/brojKnjiga"
            android:layout_alignLeft="@+id/elementListe"
            android:layout_alignStart="@+id/elementListe"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:text="@string/textView4" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>